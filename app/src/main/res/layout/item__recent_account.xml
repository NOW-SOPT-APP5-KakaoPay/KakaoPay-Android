<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_recent_user_bank_logo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="22dp"
        android:src="@drawable/ic_kakaobank_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recent_account_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="김도훈"
        android:textAppearance="@style/TextAppearance.Android.Body3Bold"
        app:layout_constraintStart_toEndOf="@id/iv_recent_user_bank_logo"
        app:layout_constraintTop_toTopOf="@id/iv_recent_user_bank_logo" />

    <TextView
        android:id="@+id/tv_recent_account_user_bank"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="카카오뱅크"
        android:textAppearance="@style/TextAppearance.Android.Detail2Regular"
        app:layout_constraintStart_toEndOf="@id/iv_recent_user_bank_logo"
        app:layout_constraintTop_toBottomOf="@id/tv_recent_account_user_name" />

    <TextView
        android:id="@+id/tv_recent_account_user_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="3333054449335"
        android:textAppearance="@style/TextAppearance.Android.Detail2Regular"
        app:layout_constraintStart_toEndOf="@id/tv_recent_account_user_bank"
        app:layout_constraintTop_toBottomOf="@id/tv_recent_account_user_name" />

    <ImageView
        android:id="@+id/iv_recent_user_favorite"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_star_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
