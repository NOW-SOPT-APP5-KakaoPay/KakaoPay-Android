<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/option_bg_yellow"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_option_barcode"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/option_item_bg"
        android:gravity="center"
        android:text="바코드"
        android:textAppearance="@style/TextAppearance.Android.Body2Bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_option_qrcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_option_qrcode"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/option_item_bg"
        android:gravity="center"
        android:text="QR스캔"
        android:textAppearance="@style/TextAppearance.Android.Body2Bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_option_barcode"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
